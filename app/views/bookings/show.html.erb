<h1>Booking</h1>
<p>Id: <%= @booking.id %></p>
<%= render 'shared/card' %>
<p>Route: <%= @minivan.departure.location if @minivan.departure %> - <%= @minivan.arrival.location if @minivan.arrival %></p>
<p>Time: <%= @minivan.departure_date %> - <%= @minivan.arrival_date %></p>
<p>Price: <%= @minivan.price %>â‚¬</p>
<p>Status: <%= @booking.status %></p>
<p>Owner of the van: <%= link_to "#{@owner.profile.first_name} #{@owner.profile.last_name}", user_path(@driver) if @driver %></p>
<p>Message: <%= @booking.message %></p>
<% if @traveller == current_user %>
  <%= link_to "Delete", minivan_booking_path(@booking), method: :delete, data: { confirm: "Are you sure that you want to delete the booking?"}, class: "btn btn-danger"%>
  <%= link_to "Modify booking", edit_minivan_booking_path(@booking) %>
<% end %>


