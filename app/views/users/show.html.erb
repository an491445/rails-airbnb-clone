<div class="container">
  <div class="row">
      <h2><%= @profile.first_name %> <%= @profile.last_name %></h2>
        <% image_url = current_user.profile.facebook_picture_url || "http://placehold.it/30x30" %>
        <%= image_tag image_url, width: 50 %>
      <h3>Driver license</h3>
      <p><%= @profile.first_name %>
      <p><%= @profile.title %></p>
      <p><%= @profile.biography %>
      </p>
        <% if @profile.driver_license %>
        <%= " has a driver license." %>
        <% else %>
        <%= " does not have a driver license." %>
        <% end %>
      </p>
    </div>
  <div class="row">
    <div class="col-xs-12">
      <h3>My own minivans</h3>
        <% if @minivans.empty? %>
        <p><%= @profile.first_name %> doesn't have any minivans to rent.</p>
        <% else %>
        <%= render 'shared/card' %>
        <% end %>
    </div>
  </div>
</div>
